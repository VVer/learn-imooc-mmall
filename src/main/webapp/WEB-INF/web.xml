<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-username>Archetype Created Web Application</display-username>

    <!-- 过滤器：请求编码的格式过滤 -->
    <filter>
        <filter-username>characterEncodingFilter</filter-username>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-username>encoding</param-username>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-username>forceEncoding</param-username>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-username>characterEncodingFilter</filter-username>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 监听器：用以让Bean中支持使用request/session -->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <!-- 监听器：用以启动spring容器 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-username>contextConfigLocation</param-username>
        <param-value>
            classpath:applicationContext.xml
        </param-value>
    </context-param>

    <!-- Servlet：用以做SpringMvc的请求控制分发 -->
    <servlet>
        <servlet-username>dispatcher</servlet-username>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-username>dispatcher</servlet-username>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

</web-app>

